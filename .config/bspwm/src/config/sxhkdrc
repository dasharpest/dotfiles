# Hide/Show Bar (Polybar and/or eww)
super + alt {h,u}
	HideBar {-h,-u}

# Hide/Unhide Window
ctrl + alt + h
	BspHideNode

# Change transparency on focused window
ctrl + alt + {plus,minus,t}
	{picom-trans {-c -o +3,-c -o -1,-c -d}

# Screenshot Now
Print
	ScreenShoTer-nomenu --now

# Screenshot Select
ctrl + Print
	ScreenShoTer-nomenu --sel

